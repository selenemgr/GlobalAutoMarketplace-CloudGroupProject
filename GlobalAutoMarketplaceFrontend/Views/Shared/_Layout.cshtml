<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GlobalAutoMarketplaceFrontend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GlobalAutoMarketplaceFrontend.styles.css" asp-append-version="true" />
    <link runat="server" rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link runat="server" rel="shortcut icon" href="~/favicon.ico" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/public/brand-logo.png" width="50px" height="50px"/> Global Auto Marketplace</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 flex-row-reverse">
                        <li class="nav-item">
                            <a href="#" class="nav-link" onclick="openLoginModal()">Login</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link" onclick="openRegisterModal()">Register</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div id="ModalContainer"></div>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Global Auto Marketplace
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function openLoginModal() {
            $("#ModalContainer").load("/Users/Login", function () {
                const modal = document.querySelector("#loginModal");
                new bootstrap.Modal(modal).show();
            });
        }

        function openRegisterModal() {
            $("#ModalContainer").load("/Users/Register", function () {
                const modal = document.querySelector("#registerModal");
                new bootstrap.Modal(modal).show();
            });
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
